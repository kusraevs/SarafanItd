<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme" parent="AppThemeBase" />

    <style name="AppTheme.Translucent" parent="AppTheme" />


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    
    <style name="Body">
        <item name="android:textColor">@color/font_grey_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="BodyBold" parent="@style/Body">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>


    <style name="TitleBig">
        <item name="android:textColor">@color/font_black_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TitleSmall">
        <item name="android:textColor">@color/font_black_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>


</resources>
